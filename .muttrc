# General settings =========================={{{

# Folder hooks
folder-hook 'email2.cock.li' 'source ~/.mutt/email2.cock.li'
folder-hook 'email3.outlook' 'source ~/.mutt/email3.outlook'
folder-hook 'email1.outlook' 'source ~/.mutt/email1.outlook'
folder-hook 'email4.gmail' 'source ~/.mutt/email4.gmail'

# Macros for switching accounts
macro index <F7> '<sync-mailbox><enter-command>source ~/.mutt/email2.cock.li<enter><change-folder>!<enter>' 'Go to email2@cock.li e-mail'
macro index <F8> '<sync-mailbox><enter-command>source ~/.mutt/email3.outlook<enter><change-folder>!<enter>' 'Go to email3@outlook e-mail'
macro index <F9> '<sync-mailbox><enter-command>source ~/.mutt/email1.outlook<enter><change-folder>!<enter>' 'Go to email1@outlook e-mail'
macro index <F10> '<sync-mailbox><enter-command>source ~/.mutt/email4.gmail<enter><change-folder>!<enter>' 'Go to email4@gmail e-mail'

# Default account
source ~/.mutt/email2.cock.li

# Delete without confirming
set delete

unset confirmappend

# Quit without confirming
set quit

# Check for new emails
set timeout             = 5   # press artificially a key after 10 seconds
set mail_check          = 10 # How often to check for new mail (time in seconds) but not more often then once in 300 seconds
set beep
set beep_new                  # beep on new messages in the mailboxes

#If this variable is set, Mutt will require that all connections to remote servers be encrypted
set ssl_force_tls=yes

set imap_keepalive = 900

# Don't ask to confirm the recipient and the subject when reply to an e-mail
set fast_reply=yes
set include=yes

# always show X number of mails in the index
set pager_index_lines = 10

# Make mutt faster
set sleep_time = 0

set ts_enabled = yes

# Default is: Mutt with %?m?%m messages&no messages?%?n? [%n NEW]?
set ts_status_format = 'mutt %m messages%?n?, %n new?'

# A customizable header
set edit_headers = yes
set editor = 'vim +/^$ +nohlsearch' # Move past headers
set folder_format = '%4C %t %f'

# Pager options
set smart_wrap

# Don't insert '+' character for wrapped lines
unset markers

# Do not mark unread mail as old
set mark_old=no

# Pad blank lines in pager with ~ (ala vi)
set tilde
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"

set sort = 'reverse-date'		# sorting the mails in threads in index (mails-list-view)
set sort_aux = reverse-last-date-received		# and the thread themselves reverse-date
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# Default is: "-%Z- %C/%m: %-20.20n   %s%*  -- (%P)"
set pager_format = '=%b %C/%m: %-20.20F   %s%* (%P)'

set forward_format = "Fwd: %s"

set mime_forward = yes

# }}}
# Keybidings ================================{{{

source ~/.mutt/bindings.mutt
macro index,pager U "<enter-command>set pipe_decode = yes<enter><pipe-message>urlview<enter><enter-command>set pipe_decode = no<enter>""view URLs"

