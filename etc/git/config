[alias]
    s = status
[user]
    email = leonardo@essia.dev
    name = Leonardo Essia
[core]
    editor = nvim
    pager = delta --dark
    bare = true
[delta]
    side-by-side = true
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[commit]
    gpgsign = true
	template = ~/etc/git/template.txt
[alias]
    histg = log --graph --pretty=format:'%C(yellow)%h%C(bold white red)%d%Creset %s %C(bold green)%cr %Creset%C(white)%an' --abbrev-commit --date=relative
    date-log = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
[format]
	signOff = true
[init]
	defaultBranch = main
